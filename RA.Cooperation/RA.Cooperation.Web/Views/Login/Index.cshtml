@{
    Layout = null;
}

@Scripts.Render("~/Scripts/login-head.js")
@Scripts.Render("~/Scripts/login.js")
@Styles.Render("~/CSS/head.css")

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span2">
        </div>
        <div class="span8 loginbox" style="width:600px;margin-top:250px;margin-left:300px;">
            <form class="form-horizontal thumbnail" style="background-color:#f5f5f5;padding:20px;">
                <p>
                    <span>登录</span>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="doregister" href="#">没有账号，注册</a>
                </p>
                <div class="alert alert-error" id="alert">
                    <button type="button" class="close" id="close">×</button>
                    <h4 id="alert-text"></h4>
                </div>
                <div class="control-group">
                    <label for="inputUserName" class="control-label">用户名</label>
                    <div class="controls">
                        <input type="text" id="userName" placeholder="UserName" style="height:30px;">
                    </div>
                </div>
                <div class="control-group">
                    <label for="inputPassword" class="control-label">密码</label>
                    <div class="controls">
                        <input type="password" id="password" placeholder="Password" style="height:30px;">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            <input id="check-rem" type="checkbox">记住我一周
                        </label>
                        <button class="btn" id="login" type="button">登录</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="span8 registerbox" style="width:600px;margin-top:250px;margin-left:300px;">
            <form class="form-horizontal thumbnail" style="background-color:#f5f5f5;padding:20px;">
                <p>
                    <span>注册</span>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a id="dologin" href="#">已有账号，登录</a>
                </p>
                <div class="alert alert-error register-error" id="alert">
                    <button type="button" class="close" id="close">×</button>
                    <h4 id="alert-text"></h4>
                </div>
                <div class="control-group">
                    <label for="registerInputUserName" class="control-label">用户名</label>
                    <div class="controls">
                        <input type="text" id="registerUserName" placeholder="UserName" style="height:30px;">
                    </div>
                </div>
                <div class="control-group">
                    <label for="registerInputEmail" class="control-label">昵称</label>
                    <div class="controls">
                        <input type="text" id="registerRealName" placeholder="NickName" style="height:30px;">
                    </div>
                </div>
                <div class="control-group">
                    <label for="registerPassword" class="control-label">密码</label>
                    <div class="controls">
                        <input type="password" id="registerPassword" placeholder="Password" style="height:30px;">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button class="btn" id="register" type="button">注册</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="span2">
        </div>

        <div id="modal-container-000001" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3>消息</h3>
            </div>
            <div class="modal-body">
                <p id="modal-body-text"></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success register-success" data-dismiss="modal" aria-hidden="true">确定</button>
            </div>
        </div>
    </div>
</div>