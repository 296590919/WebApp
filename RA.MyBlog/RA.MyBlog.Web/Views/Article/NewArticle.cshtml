@model int
<div class="span10">
    @Scripts.Render("~/Scripts/NewArticles.js")
    <script>
        var categoryID = @Model;
        $(".hero-unit").remove();
        $(".navbar").remove();
    </script>
    <form class="form-horizontal">
        <div>
            <div style="display:block;width: 450px; float:left">
                <div class="control-group" style="margin-bottom:0px;">
                    <label class="control-label" style="text-align:left;width:auto;">标题<span class="required">*</span></label>
                    <div class="controls" style="margin-left:50px;">
                        <input id="title" type="text" style="width:400px; height:30px;">
                    </div>
                </div>
                <div class="control-group" style="margin-bottom:0px ;margin-top:10px">
                    <label class="control-label" style="text-align:left;width:auto;">来源<span class="required">*</span></label>
                    <div class="controls" style="margin-left:50px;">
                        <input id="copyright" type="text" style="width:400px; height:30px;">
                    </div>
                </div>
            </div>
            <div style="display:block;float:right">
                <button class="btn btn-success" type="button" onclick="postArticle()">提交</button>
            </div>
        </div>
        <div class="control-group">
            <div class="controls" style="margin-left:0px;margin-top:120px;">
                <script id="editor" type="text/plain" style="height:500px;margin-left:0px;"></script>
            </div>
        </div>
    </form>

    <div id="modal-container-701036" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">添加文章</h3>
        </div>
        <div class="modal-body">
            <p id="modal-body-text"></p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-success" data-dismiss="modal" aria-hidden="true">关闭</button>
        </div>
    </div>
</div>